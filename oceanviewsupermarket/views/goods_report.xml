<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_goods">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Goods Report</h2>
                        <p>Name :
                            <span t-field="o.name"/>
                        </p>
                        <p>Amount :
                            <span t-esc="o.amount"/>
                        </p>

                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>

